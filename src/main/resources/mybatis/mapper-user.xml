<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.crowdfunding.cpes.dao.UserDao">
	
	
	<select id="queryUserDatas" resultType="user">
		select
		*
		from t_user
		limit #{start}, #{pagesize}
	</select>

	<insert id="insertUser" resultType="user">
        insert into t_user (
            name, loginacct, userpswd, email, createtime
        ) values (
            #{name}, #{loginacct}, #{userpswd}, #{email}, #{createtime}
        )
    </insert>

	<select id="queryUserCount" resultType="int">
		select
		count(*)
		from t_user
	</select>

	<select id="queryUserRoleCount" resultType="urcnt">
		select
		userid,
		count(roleid) as upcount
		from (
		select
		*
		from t_user_role
		where userid in
		<foreach collection="users" item="user" open="(" close=")"
			separator=",">#{user.id}</foreach>
		) a
		group by userid
	</select>

	<select id="queryUserByLoginacct" resultType="user">
		select
		*
		from t_user
		where loginacct = #{loginacct}
	</select>


</mapper>